			<groupId>org.xowl.platform</groupId>
			<artifactId>xowl-connector-semanticweb</artifactId>
			<version>0.2.4-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.xowl.toolkit</groupId>
				<artifactId>xowl-packaging-maven-plugin</artifactId>
				<version>0.1.0-SNAPSHOT</version>
				<extensions>true</extensions>
				<configuration>
					<isBase>true</isBase>
					<resources>
						<param>src/main/resources/config</param>
						<param>src/main/resources/admin.sh</param>
						<param>src/main/resources/do-run.sh</param>
						<param>src/main/resources/install-daemon.sh</param>
						<param>src/main/resources/uninstall-daemon.sh</param>
					</resources>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
