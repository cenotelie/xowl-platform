			<groupId>org.xowl.platform</groupId>
			<artifactId>xowl-service-evaluation</artifactId>
			<version>0.2.4-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.xowl.platform</groupId>
			<artifactId>xowl-service-httpapi</artifactId>
			<version>0.2.4-SNAPSHOT</version>
