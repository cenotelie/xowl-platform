			<groupId>org.xowl.platform</groupId>
			<artifactId>xowl-service-importation</artifactId>
			<version>0.2.4-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.xowl.platform</groupId>
			<artifactId>xowl-service-marketplace</artifactId>
			<version>0.2.4-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.xowl.platform</groupId>
			<artifactId>xowl-service-security-internal</artifactId>
			<version>0.2.4-SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.xowl.platform</groupId>
			<artifactId>xowl-service-security-shiro</artifactId>
			<version>0.2.4-SNAPSHOT</version>
