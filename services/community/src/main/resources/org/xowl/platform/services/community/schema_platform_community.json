{
  "$schema": "http://json-schema.org/schema",
  "id": "http://xowl.org/platform/services/collaboration/schema",
  "definitions": {
    "Bot": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "org.xowl.platform.services.community.bots.Bot"
          ]
        },
        "identifier": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "botType": {
          "type": "string"
        },
        "wakeupOnStartup": {
          "type": "boolean"
        },
        "status": {
          "enum": [
            "Invalid",
            "Asleep",
            "WakingUp",
            "Awaken",
            "Working",
            "GoingToSleep"
          ]
        }
      },
      "required": [
        "type",
        "identifier",
        "name",
        "botType",
        "status"
      ]
    },
    "Bots": {
      "type": "array",
      "items": {
        "type": "object",
        "oneOf": [
          {
            "$ref": "#/definitions/Bot"
          }
        ]
      }
    },
    "BotSpecification": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "org.xowl.platform.services.community.bots.BotSpecification"
          ]
        },
        "identifier": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "botType": {
          "type": "string"
        },
        "wakeupOnStartup": {
          "type": "boolean"
        }
      },
      "required": [
        "type",
        "identifier",
        "name",
        "botType"
      ]
    }
  }
}